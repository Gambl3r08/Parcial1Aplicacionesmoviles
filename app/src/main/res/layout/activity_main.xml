<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/txtEntrada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="@android:string/autofill"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/botonAgregar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar" />

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resultado:" />

    <RadioGroup
        android:id="@+id/grupoRadio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/OrdenarVector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ordenar vector" />

        <RadioButton
            android:id="@+id/PromedioVector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Promedio" />

        <RadioButton
            android:id="@+id/ValorMenor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valor menor del vector" />

        <RadioButton
            android:id="@+id/ValorMayor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valor mayor del vector" />


    </RadioGroup>

    <Button
        android:id="@+id/BotonCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular" />

    <Button
        android:id="@+id/BotonBorrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Borrar datos" />

</LinearLayout>